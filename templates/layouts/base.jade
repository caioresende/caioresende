            nav#large-nav
                a(href="#book-a" class="black-btn border-radius") Trabalhos
                a(href="#book-a" class="black-btn border-radius") Cursos
                a(href="/about" class="black-btn border-radius") Sobre
                a(href="/contact" class="black-btn border-radius") Contato
            
        
        main
            
            block intro
            
            +flash-messages(messages)
            
            block content
        
        footer
            nav(class="flex flex-row flex-wrap flex-align-center flex-justify-content-center default-padding")
